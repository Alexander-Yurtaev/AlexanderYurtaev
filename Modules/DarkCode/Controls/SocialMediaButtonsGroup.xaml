<UserControl
    x:Class="DarkCode.Controls.SocialMediaButtonsGroup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DarkCode.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:v20200724="clr-namespace:DarkCode.Controls.SocialMediaButtons.v20200724"
    xmlns:visibleable="clr-namespace:AlexanderYurtaev.Controls.Visibleable;assembly=AlexanderYurtaev.Controls"
    Width="812"
    Height="100"
    Margin="0"
    d:DesignHeight="100"
    d:DesignWidth="812"
    Background="#2c3a47"
    mc:Ignorable="d">

    <UserControl.Resources>
        <SolidColorBrush x:Key="DefaultForeground" Color="#6ab04c" />

        <Style TargetType="v20200724:SocialMediaButton">
            <Setter Property="Foreground" Value="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:SocialMediaButtonsGroup}, Path=Foreground, FallbackValue={StaticResource DefaultForeground}, TargetNullValue={StaticResource DefaultForeground}}" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <visibleable:VisibleableColumnDefinition Width="Auto" Visible="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:SocialMediaButtonsGroup}, Path=ShowFacebookLink}" />
            <visibleable:VisibleableColumnDefinition Width="Auto" Visible="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:SocialMediaButtonsGroup}, Path=ShowTwitterLink}" />
            <visibleable:VisibleableColumnDefinition Width="Auto" Visible="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:SocialMediaButtonsGroup}, Path=ShowInstagramLink}" />
            <visibleable:VisibleableColumnDefinition Width="Auto" Visible="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:SocialMediaButtonsGroup}, Path=ShowYoutubeLink}" />
            <visibleable:VisibleableColumnDefinition Width="Auto" Visible="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:SocialMediaButtonsGroup}, Path=ShowLinkedInLink}" />
            <visibleable:VisibleableColumnDefinition Width="Auto" Visible="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:SocialMediaButtonsGroup}, Path=ShowBeHanceLink}" />
        </Grid.ColumnDefinitions>
        <v20200724:SocialMediaButton
            Grid.Column="0"
            NavigateUri="https://facebook.com/test"
            SocialMediaButtonType="Facebook" />
        <v20200724:SocialMediaButton
            Grid.Column="1"
            NavigateUri="https://facebook.com/test"
            SocialMediaButtonType="Twitter" />
        <v20200724:SocialMediaButton
            Grid.Column="2"
            NavigateUri="https://facebook.com/test"
            SocialMediaButtonType="Instagram" />
        <v20200724:SocialMediaButton
            Grid.Column="3"
            NavigateUri="https://facebook.com/test"
            SocialMediaButtonType="Youtube" />
        <v20200724:SocialMediaButton
            Grid.Column="4"
            NavigateUri="https://facebook.com/test"
            SocialMediaButtonType="LinkedIn" />
        <v20200724:SocialMediaButton
            Grid.Column="5"
            NavigateUri="https://facebook.com/test"
            SocialMediaButtonType="BeHance" />
    </Grid>
</UserControl>