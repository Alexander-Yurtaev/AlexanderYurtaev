                        FacebookLink="https://facebook.com/test"
                        Foreground="{Binding ElementName=ColorPicker, Path=SelectedValue}"
                        InstagramLink="https://instragram.com/test"
                        LinkedInLink="https://linkedin.com/test"
                        ShowBeHanceLink="{Binding ElementName=ShowBeHanceCheckBox, Path=IsChecked}"
                        ShowFacebookLink="{Binding ElementName=ShowFacebookCheckBox, Path=IsChecked}"
                        ShowInstagramLink="{Binding ElementName=ShowInstagramCheckBox, Path=IsChecked}"
                        ShowLinkedInLink="{Binding ElementName=ShowLinkedInCheckBox, Path=IsChecked}"
                        ShowTwitterLink="{Binding ElementName=ShowTwitterCheckBox, Path=IsChecked}"
                        ShowYoutubeLink="{Binding ElementName=ShowYoutubeCheckBox, Path=IsChecked}"
