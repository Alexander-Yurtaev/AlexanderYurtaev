<Window x:Class="Colorlib.LoginForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Colorlib"
             mc:Ignorable="d" 
             WindowStartupLocation="CenterScreen" 
             ResizeMode="NoResize" 
             WindowStyle="None" 
             ShowInTaskbar="False" 
             Title="{Binding Title, TargetNullValue='Colorlib', FallbackValue='Colorlib'}" 
             Icon="{Binding Icon, TargetNullValue={x:Null}, FallbackValue={x:Null}}" 
             Width="493" 
             Height="393">
    <Window.Resources>
        <ResourceDictionary Source="Styles.xaml"/>
    </Window.Resources>
    <Grid Margin="62, 119">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0"/>
        <PasswordBox Grid.Row="1"/>
        <Button Grid.Row="2" Style="{StaticResource ActiveButton}" Content="LOGIN"/>
        <Label Grid.Row="3" Content="{Binding ErrorMessage, TargetNullValue='', FallbackValue=''}" Style="{StaticResource ErrorMessageLabelStyle}"/>
    </Grid>
</Window>
